<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/preferences_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/checkout_con_mercado_pago"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subscription_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/pagar_subscripcion"
        app:layout_constraintEnd_toEndOf="@+id/preferences_button"
        app:layout_constraintStart_toStartOf="@+id/preferences_button"
        app:layout_constraintTop_toBottomOf="@+id/preferences_button" />

</androidx.constraintlayout.widget.ConstraintLayout>